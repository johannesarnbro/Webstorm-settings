<templateSet group="user">
  <template name="cl" value="console.log('$VAR$ --&gt; ', $VAR$);" description="console log var" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="clog" value="console.log('$FN$ $MN$ $VAR$ --&gt;', $VAR$);" description="console log var in function" toReformat="false" toShortenFQNames="true">
    <variable name="FN" expression="jsMethodName()" defaultValue="" alwaysStopAt="true" />
    <variable name="MN" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="c" value="console.log('$VAR$');" description="console log" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="cw" value="console.warn('$VAR$ --&gt; ', $VAR$);" description="console warn var" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
</templateSet>